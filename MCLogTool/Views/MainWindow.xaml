            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseLeftButtonUp">
                    <i:InvokeCommandAction Command="{Binding MergeLogCommand}" CommandParameter="{Binding SelectedItem, ElementName=Profiles}"/>
